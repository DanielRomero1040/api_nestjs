<!DOCTYPE html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <div>
      <ul id="messages">
          {{#each chat}}
            <p class="text-light"> <strong class="text-primary">{{this.email}} : </strong> {{this.message}} -- <span class="text-warning"> {{this.date}} </span></p>          
          {{/each}}
      </ul>
    </div>

    <div>
      <input type="text" placeholder="email" id="nombre" />
      <input id="message" type="text" />
      <button onclick="handleSubmitNewMessage()">Submit</button>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./chat-socket.js"></script>
  </body>
</html>
